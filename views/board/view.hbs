{{#section "css"}}
  <style>
    label { display: inline-block; width: 110px; text-align: right; font-weight:
    bold; margin-right: 5px;}
    #view{ width: 700px; margin: 0 auto;}
    #contents {
    border: 1px solid #bbbbbb; width: 560px; min-height: 350px; display:
    inline-block; white-space: pre; }
    #view div:last-child{text-align: center;}
  </style>
{{/section}}

<main>
  <h2>게시판 본문글</h2>
{{#bds}}
  <div id="view">
    <div><label>제목</label><span>{{title}}</span></div>

    <div><label>작성자</label><span>{{userid}}</span></div>

    <div><label>작성일</label><span>{{regdate}} {{views}}</span></div>

    <div><label class="drgup">본문</label><span id="contents">
        {{contents}}
    </span></div>
    <div><label></label>
{{/bds}}
{{#if session.userid}}
    <button type="button"
    onclick="location.href='/board/write'">새글쓰기</button>
{{/if}}
    <button type="button"
            onclick="location.href='/board/list'">목록으로</button>

{{#if session.userid}}
    <button type="button" id="updatebtn">수정하기</button>
    <button type="button" id="deletebtn">삭제하기</button>
{{/if}}
    </div>
  </div>
</main>